        xmlns:local="clr-namespace:Clinic.pagesAdmin"
        mc:Ignorable="d"
        Title="DlgAddDoctor" Height="513.699" Width="800">
    <Grid Margin="0,0,0,-3">
        <Label Content="Id" HorizontalAlignment="Left" Margin="37,31,0,0" VerticalAlignment="Top"/>
        <Label Content="Auto" HorizontalAlignment="Left" Margin="115,31,0,0" VerticalAlignment="Top"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="37,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="tbFirstName" HorizontalAlignment="Left" Height="23" Margin="115,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="37,139,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="tbLastName"  HorizontalAlignment="Left" Height="23" Margin="115,139,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label  Content="Speciality" HorizontalAlignment="Left" Margin="37,197,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSpeciality" HorizontalAlignment="Left" Height="23" Margin="115,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
