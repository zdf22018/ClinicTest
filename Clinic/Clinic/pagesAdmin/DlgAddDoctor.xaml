        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Height="23" Margin="115,328,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="37,380,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="23" Margin="115,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Login Password" HorizontalAlignment="Left" Margin="37,430,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="23" Margin="124,429,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btAddDoctor" Content="Add Doctor" HorizontalAlignment="Left" Margin="401,430,0,0" VerticalAlignment="Top" Width="75" Click="btAddDoctor_Click"/>

    </Grid>
</Window>
