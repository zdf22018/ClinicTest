<Window x:Class="Clinic.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBox x:Name ="tbUserName" HorizontalAlignment="Left" Height="23" Margin="275,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="tbPW" HorizontalAlignment="Left" Margin="275,189,0,0" VerticalAlignment="Top" Width="120" Height="23" />
        <Label Content="User Name" HorizontalAlignment="Left" Margin="149,104,0,0" VerticalAlignment="Top"/>
        <Label Content="Pass Word" HorizontalAlignment="Left" Margin="149,190,0,0" VerticalAlignment="Top"/>
        <Button x:Name ="btLogin" Content="Log in" HorizontalAlignment="Left" Margin="149,275,0,0" VerticalAlignment="Top" Width="75" Click="btLogin_Click"/>
        <Button x:Name="btCancel" Content="Cancel" HorizontalAlignment="Left" Margin="275,275,0,0" VerticalAlignment="Top" Width="75" Click="btCancel_Click"/>

    </Grid>
</Window>
